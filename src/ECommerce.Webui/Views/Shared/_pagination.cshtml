


@model PageInfo


<div class="row">
    <div class="col">
        
        <div class="container" id="pagination">
            @* ========================= *@
            <nav aria-label="Page navigation">
                <ul class="pagination">
                    
                    @* +++++++++++++++++++++++++++++++++++++++++++ *@
                    @if(Model.CurrentPage >=5)
                    {
                        for(var i=Model.CurrentPage-4 ; i<=Model.CurrentPage+5 && i<=Model.TotalPages; i++)
                        {
                            if(i>0)
                            {
                                <li class="page-item @(Model.CurrentPage== i ? "active":"")">
                                    <a class="page-link"
                                        asp-controller="Shop" asp-action="List" 
                                        asp-route-category="@Model.CurrentCategory"
                                        asp-route-page="@i">
                                        @i
                                    </a>
                                </li>
                            }
                        }
                    }
                    else if(Model.CurrentPage >=Model.TotalPages-5)
                    {
                        for(var i=Model.TotalPages-5; i<=Model.TotalPages;i++)
                        {
                            <li class="page-item @(Model.CurrentPage== i ? "active":"")">
                                <a class="page-link"
                                    asp-controller="Shop" asp-action="List" 
                                    asp-route-category="@Model.CurrentCategory"
                                    asp-route-page="@i">
                                    @i
                                </a>
                            </li>
                        }
                    }
                    else{
                        if(Model.CurrentPage==1)
                        {
                            for(var i=1; i<Model.CurrentPage+9; i++)
                            {
                                <li class="page-item @(Model.CurrentPage== i ? "active":"")">
                                    <a class="page-link"
                                        asp-controller="Shop" asp-action="List" 
                                        asp-route-category="@Model.CurrentCategory"
                                        asp-route-page="@i">
                                        @i
                                    </a>
                                </li>
                            }
                        }else if(Model.CurrentPage==2)
                        {
                            for(var i=1; i<Model.CurrentPage+9; i++)
                            {
                                <li class="page-item @(Model.CurrentPage== i ? "active":"")">
                                    <a class="page-link"
                                        asp-controller="Shop" asp-action="List" 
                                        asp-route-category="@Model.CurrentCategory"
                                        asp-route-page="@i">
                                        @i
                                    </a>
                                </li>
                            }
                        }else if(Model.CurrentPage==3)
                        {
                            for(var i=1; i<Model.CurrentPage+9; i++)
                            {
                                <li class="page-item @(Model.CurrentPage== i ? "active":"")">
                                    <a class="page-link"
                                        asp-controller="Shop" asp-action="List" 
                                        asp-route-category="@Model.CurrentCategory"
                                        asp-route-page="@i">
                                        @i
                                    </a>
                                </li>
                            }
                        }else if(Model.CurrentPage==4)
                        {
                            for(var i=1; i<Model.CurrentPage+9; i++)
                            {
                                <li class="page-item @(Model.CurrentPage== i ? "active":"")">
                                    <a class="page-link"
                                        asp-controller="Shop" asp-action="List" 
                                        asp-route-category="@Model.CurrentCategory"
                                        asp-route-page="@i">
                                        @i
                                    </a>
                                </li>
                            }
                        }

                    }
                    @* +++++++++++++++++++++++++++++++++++++++++++ *@
                    @* PREVIOUS PAGE *@
                    @if(Model.CurrentPage > 1)
                    {
                        <li class="page-item">
                            <a class="page-link"
                                asp-controller="Shop" asp-action="List" 
                                asp-route-category="@Model.CurrentCategory"
                                asp-route-page="@(Model.CurrentPage-1)">
                                Previous
                            </a>
                        </li>
                    }
                    @* NEXT PAGE *@
                    @if(Model.CurrentPage < Model.TotalPages)
                    {
                        <li class="page-item">
                            <a class="page-link"
                                asp-controller="Shop" asp-action="List" 
                                asp-route-category="@Model.CurrentCategory"
                                asp-route-page="@(Model.CurrentPage+1)">
                                Next
                            </a>
                        </li>
                    }
                    @* END PAGE *@
                    <li class="page-item"></li>
                        <a class="page-link"
                            asp-controller="Shop" asp-action="List" 
                            asp-route-category="@Model.CurrentCategory"
                            asp-route-page="@(Model.TotalPages)">
                            End
                        </a>
                    </li>
                    @* +++++++++++++++++++++++++++++++++++++++++++ *@
                </ul>
            </nav>
            @* ========================= *@
        </div>
    </div>
</div>