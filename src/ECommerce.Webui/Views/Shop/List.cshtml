



@* verilen sayfa bilgisi,kategori ve sayfada bulunacak ürün sayısını vererek gelen action bölümü *@

@model ProductListViewModel



<div class="col">
    @* ================================================= *@
    <div class="row-cols-md-4 row-cols-lg-5 row-cols-sm-2 row" id="itemCards">
        @if(Model.productsData.Count()==0)
        {
            @await Html.PartialAsync("_noproduct")
        }else{
            @foreach(var product in Model.productsData)
            {
                @await Html.PartialAsync("_product",product)
            }
        }
    </div>
    @* ================================================= *@
    <div class="row">
        <div class="col">

            <div class="container" id="pagination">
                @* ========================= *@
                <nav aria-label="Page navigation">
                    <ul class="pagination">
                        @for(var i=1; i<=Model.PageInfo.TotalPages(); i++)
                        {
                            <li class="page-item @(Model.PageInfo.CurrentPage== i ? "active":"")">
                                <a class="page-link"
                                    asp-controller="Shop" asp-action="List" 
                                    asp-route-category="@Model.PageInfo.CurrentCategory"
                                    asp-route-page="@i">
                                    @i
                                </a>
                            </li>
                        }
                    </ul>
                </nav>
                @* ========================= *@
            </div>
        </div>
    </div>
    @* ================================================= *@

</div>